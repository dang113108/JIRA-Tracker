{
    "manifest_version": 2,

    "name": "JIRA Tracker",
    "description": "This extension will help you to log work time.",
    "version": "1.0",

    "browser_action":
    {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Automatically record your work time spent."
    },
    "permissions": [
        "storage",
        "https://*/*"
    ],
    "background":
    {
        "scripts": ["js/popup.js", "js/account.js", "js/collapse.js"],
        "persistent": true
    }
}